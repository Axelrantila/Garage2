@model IEnumerable<Garage2.Models.Member>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<!--Searching-->

<p>
    Search will return results meeting any of the conditions; this also include part of the strings. Leaving all fields empty will return every member in the database.
</p>

@using (Html.BeginForm("Index", "Members", FormMethod.Get))
{
    <div class="form-horizontal">

        <div class="form-group">
            <label class="control-label col-md-2">Name</label>
            <div class="col-md-10">
                <input type="search" name="Name" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Email Address</label>
            <div class="col-md-10">
                <input type="search" name="EmailAddress" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Phone Number</label>
            <div class="col-md-10">
                <input type="search" name="PhoneNr" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Search" />
            </div>
        </div>
    </div>



}

<!--Information-->
<table class="table">
    <tr>
        <th><label>Name</label></th>
        <th><label>Email Address</label></th>
        <th><label>PhoneNr</label></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNr)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
