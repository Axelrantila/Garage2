<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Garage 2.0</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
	<link href="~/Content/Garage2.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Garage 2.5", "Index", "Vehicles2", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>*@
                    <li>@Html.ActionLink("Parked Vehicles", "Index", "Vehicles2")</li>
                    <li>@Html.ActionLink("Search for Vehicles", "Search", "Vehicles2")</li>
                    <li>@Html.ActionLink("Statistics", "Statistics", "Vehicles2")</li>
                    <li>@Html.ActionLink("Members", "Index", "Members")</li>
                </ul>
            </div>
        </div>
    </div>

    <div id="UserFailMessage">
        @if (!string.IsNullOrEmpty(ViewBag.UserFailMessage))
        {
            <div class="alert-warning">
                <h3>
                    @ViewBag.UserFailMessage
                </h3>
            </div>
        }
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Garage 2.0</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
