@model Garage2.Models.Vehicle

@{
    ViewBag.Title = "Reciept";
}

<h2>Receipt</h2>

<div>
    <h4>Parking specification</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Owner)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Owner)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LicenseNr)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LicenseNr)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TimeParked)
