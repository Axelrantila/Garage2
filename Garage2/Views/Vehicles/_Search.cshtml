@model IEnumerable<Garage2.Models.Vehicle>

@using (Html.BeginForm("Search", "Vehicles", FormMethod.Get))
{
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-2">Owner of the vehicle</label>
            <div class="col-md-10">
                <input type="search" name="Owner" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">License Number</label>
            <div class="col-md-10">
                <input type="search" name="LicenseNr" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Length(m)</label>
            <div class="col-md-10">
                <input type="search" name="Length" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Weight(kg)</label>
            <div class="col-md-10">
                <input type="search" name="Weight" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Vehicle type</label>
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.First().TypeOfVehicle)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Any</label>
            <div class="col-md-10">
                <input type="checkbox" name="Any" value="Any" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Search" />
            </div>
        </div>
    </div>
}

<table class="table">
    <tr>
        <th>
            <label>Owner</label>
        </th>   
        <th>
            <label>License Number</label>
        </th>
        <th>
            <label>Type of Vehicle</label>
        </th>
        <th>
            <label>Length(m)</label>
        </th>
        <th>
            <label>Weight(kg)</label>
        </th>
        <th>
            <label>Parking date</label>
        </th>
        <th>
            <label>Currently parked</label>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Owner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LicenseNr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeOfVehicle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Length)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeParked)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Parked)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>